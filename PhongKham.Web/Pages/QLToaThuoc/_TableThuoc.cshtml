@using PhongKham.Core.Entities
@model IEnumerable<Thuoc>
<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">Danh sách Thuốc</h5>
    <div class="table-responsive text-nowrap">
        <table class="table" id="thuocTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tên thuốc</th>
                    <th>Đơn giá</th>
                    <th>Đơn vị</th>
                    <th>Cách dùng</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model.Count() != 0)
                {


                    @foreach (var thuoc in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@thuoc.Id</strong></td>
                            <td>@thuoc.TenThuoc</td>
                            <td> @thuoc.DonGia</td>
                            <td>@thuoc.donVi</td>
                            <td>@thuoc.cachDung</td>
                            <td>
                                <form method="post" asp-page-handler="AddToListThuocCart">
                                    <input type="hidden" name="thuocId" value="@thuoc.Id" />
                                    <button type="submit" class="btn btn-outline-success">Thêm vào Toa Thuốc</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
<!--/ Basic Bootstrap Table -->
<script>
    $(document).ready(function () {
        $("#thuocTable").DataTable();
    });
</script>

