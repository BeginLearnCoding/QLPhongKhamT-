@using PhongKham.Core.Entities
@model PhieuKhamBenh
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="Detail">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Ngày khám</label>
        <div class="col-md-9">
            <input type="datetime-local" autocomplete="off" asp-for="dateTimeKhamBenh" name="dateTimeKhamBenh" class="form-control" readonly>
            <span asp-validation-for="dateTimeKhamBenh" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Bác sĩ</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="BacSiId" name="BacSiId" class="form-control" readonly>
            <span asp-validation-for="BacSiId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Ghi chú</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="GhiChu" name="GhiChu" class="form-control" readonly>
            <span asp-validation-for="GhiChu" class="text-danger"></span>
        </div>
    </div>
</form>