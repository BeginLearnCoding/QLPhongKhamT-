@using PhongKham.Core.Entities
@model BacSi
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Tên Bác Sĩ</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="TenBacSi" name="tenBacSi" class="form-control" required>
            <span asp-validation-for="TenBacSi" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Sdt Bác sĩ</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="sdtBS" name="sdtBS" class="form-control" required>
            <span asp-validation-for="sdtBS" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Đia chỉ Bác sĩ</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="diaChiBS" name="diaChiBS" class="form-control" required>
            <span asp-validation-for="diaChiBS" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary save-button">Lưu </button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>