@using PhongKham.Core.Entities
@model NhanVien
<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Tên Nhân Viên</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="tenNhanVien" name="tenNhanVien" class="form-control" required>
            <span asp-validation-for="tenNhanVien" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Sdt Nhân Viên</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="sdtNV" name="sdtNV" class="form-control" required>
            <span asp-validation-for="sdtNV" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Đia chỉ Nhân Viên</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="dChiNV" name="dChiNV" class="form-control" required>
            <span asp-validation-for="dChiNV" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary save-button">Lưu </button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>